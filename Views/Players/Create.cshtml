@model Sharpen.Models.Player

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <h1 class="mt-5 mb-5">Create New High Score</h1>
    <img src="@Url.Content("~/images/Heroine04.png")" class="hero-img" />
</div>
    <h3>Player</h3>
<hr />
<div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group mr-5">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExperiencePoints" class="control-label">Experience:</label>
                    <input asp-for="ExperiencePoints" class="form-control" type="text" value='@ViewData["Xp"]' readonly/>
                    <span asp-validation-for="ExperiencePoints" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label asp-for="StartingDate" class="control-label">Date</label>
                    <input asp-for="StartingDate" class="form-control" />
                    <span asp-validation-for="StartingDate" class="text-danger"></span>
                </div>
            </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>

</div>

<div class="mt-3">
    <a class="back-link" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

